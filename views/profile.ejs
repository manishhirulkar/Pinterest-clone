<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  </head>
  <body>
    <%-include('./partials/nav.ejs')%>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
      
      <input type="file" name="image">
     
    </form>
      <div >
      <div class ="profdets flex flex-col items-center mt-20">
        <div class ="relative">
          <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
          <i class="text-zinc-800 ri-pencil-fill"></i>
            </span>
          <div class="profile-picture w-32 h-32">
          <img src="/images/uploads/<%= user.profileImage %>" alt="Profile Picture">
        </div>
        </div>
        <h2 class="name"><%= user.fullname %></h2>
        <h3 class="username">@<%= user.username %></h3>
        <a  href="/edit" class="mt-5 px-7 py-3 bg-red-600 rounded-full text-xs font-semibold">Edit</a>
        <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-10">Add New Post</a>
      <!--
        <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="text" name="filecaption" placeholder="some caption">
          <input type="file" name="file">
          <input type="submit">
        </form>
      -->
      </div>
  </div>
  <div class="container">
    <div class="cards flex flex-wrap gap-2 px-10 mt-10">
      
        <div class="card" style="width: 18rem;"> 
        <div class="w-52 h-40 rounded-lg overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" class="card-img-top" alt="...">
        </div>
        <div class="card-body">
        <a href="/show/posts" class="initial-block text-xl font-semibold mt-3">Your Uploaded Pics</a>
        <h5 class="text-sm font-medium opacity-60"><%= user.posts.length  %> Pins</h5>
      </div>  
      </div>
      
    </div>
  </div>
  </div>
  <script>
    document.querySelector('#uploadicon').addEventListener("click",function(){
      document.querySelector('#uploadform input').click();
    })

    document.querySelector('#uploadform input').addEventListener("change",function(){
      document.querySelector("#uploadform").submit();
    })
  </script>
  </body>
</html>